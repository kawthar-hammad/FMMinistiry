<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A premium admin dashboard template by mannatthemes" name="description" />
    <meta content="Mannatthemes" name="author" />

    @{
        try
        {
            <title>@ViewBag.Title</title>
        }
        catch
        {
            <title>@ViewBag.Title</title>
        }
    }
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/faveicon.ico">

    <!-- App css -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/metismenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/droidarabickufi.css" rel="stylesheet" />
    <style type="text/css">
        * {
            font-family: 'Droid Arabic Kufi', 'Open Sans', sans-serif;
            font-size: 14px;
        }

        .note {
            color: #f00;
        }
    </style>
</head>

<body class="account-body">

    <!-- Log In page -->
    <div class="row vh-100">
        <div class="col-lg-4  pr-0">
            <div class="card mb-0 shadow-none">
                <div class="card-body">
                    <div class="px-3">
                        <div class="media">
                            <div class="media-body ml-3 text-center">
                                <h4 class="mt-0 mb-1">
                                <img src="~/faveicon.ico" alt="logo-small">
                                    <a href="https://www.mafmm.gov.ly" class="logo" style="font:Droid Arabic Kufi">
                                        الهيئة العامة لرعاية أسر الشهداء
                                    </a>
                                </h4>
                            </div>
                           
                        </div>

                        @RenderBody()
                    </div>
                    <div class="account-social text-center">
                        <h6 class="my-4"></h6>
                        <ul class="list-inline mb-4">
                            <li class="list-inline-item">
                                <a href="" class="">
                                    <i class="fab fa-facebook-f facebook"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="" class="">
                                    <i class="fab fa-twitter twitter"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="" class="">
                                    <i class="fab fa-google google"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="m-3 text-center p-3 text-primary"></div>
                    <div class="m-3 text-center p-3 text-primary"></div>
                    <div class="m-3 text-center p-3 text-primary">

                        @Html.Partial("_Footer")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 p-0 d-flex justify-content-center">
            <div class="accountbg d-flex align-items-center">
                <div class="account-title text-white text-center">
                    @*<img src="~/Content/images/MFMinistryImg.png" alt="" width="700" height="700">*@
                    @*<img src="~/Content/images/logo-sm.png" alt="" class="thumb-sm">*@
                    <h4 class="mt-3">الهيئة العامة لرعاية أسر الشهداء والمفقودين والمبتورين</h4>
                    <div class="border w-25 mx-auto border-primary"></div>
                    <h1 class="">منظومة الإحصاء</h1>

                </div>
            </div>
        </div>

    </div>



    <!-- End Log In page -->
    <!-- jQuery  -->
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/metisMenu.min.js"></script>
    <script src="~/Scripts/js/waves.min.js"></script>
    <script src="~/Scripts/js/jquery.slimscroll.min.js"></script>

    <!-- App js -->
    <script src="~/Scripts/js/app.js"></script>

</body>
</html>