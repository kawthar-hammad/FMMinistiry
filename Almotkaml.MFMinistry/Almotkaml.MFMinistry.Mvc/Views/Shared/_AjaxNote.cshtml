@using Almotkaml
@{
    var application = Html.Application();
    var message = string.IsNullOrWhiteSpace(application.Message) ? TempData["Note"]?.ToString() : application.Message;
    var isSucceed = application.RequestState == RequestState.Valid;
}

@if (!string.IsNullOrWhiteSpace(message) && isSucceed)
{
    <div id="ajax-note" class="alert alert-success">@Html.Raw(message.Replace(".", ".<br/>"))</div>
}
@if (!string.IsNullOrWhiteSpace(message) && !isSucceed)
{
    <div id="ajax-note" class="alert alert-danger">@Html.Raw(message.Replace(".", ".<br/>"))</div>
}

<span id="request-done" style="display: none">@ViewData["Done"]</span>
<span id="ajax-model-id" style="display: none">@ViewData["ModelId"]</span>

<div id="divLoading" style="display: none; margin: 0; padding: 0; position: fixed; right: 0; top: 0; width: 100%; height: 100%; background-color: rgb(102, 102, 102); z-index: 30001; -ms-opacity: 0.8; opacity: 0.8;">
    <p style="position: absolute; color: White; top: 50%; left: 45%;">
        الرجاء الانتظار ...
        @*<img src="~/Images/ajax-loading.gif" alt="Loading ...">*@
        <img src="~/Content/plugins/slick/ajax-loader.gif" />
    </p>
</div>
